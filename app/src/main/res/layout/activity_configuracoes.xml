<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/activity_configuracoes_campo_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/activity_configuracoes_campo_senha"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/e_mail"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        />

    <EditText
        android:id="@+id/activity_configuracoes_campo_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/activity_configuracoes_button_login"
        app:layout_constraintTop_toBottomOf="@+id/activity_configuracoes_campo_email"
        android:hint="@string/senha"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        />

    <Button
        android:id="@+id/activity_configuracoes_button_login"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:text="@string/logar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1000000" />

    <Button
        android:id="@+id/activity_configuracoes_button_sync"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:text="@string/sincronizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_configuracoes_button_login"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/activity_configuracoes_button_back"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:text="@string/voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_configuracoes_button_sync"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>