<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_ajuda_forca_muscular_ombro_trapezio_medio_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="0"
                    android:maxWidth="164dp"
                    android:minWidth="64dp"
                    android:text="@string/musculo"
                    android:textSize="24sp"
                    
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trapezio_medio_ombro"
                    android:textSize="24sp"

                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="0"
                    android:maxWidth="164dp"
                    android:minWidth="64dp"
                    android:text="@string/posicao_do_paciente"
                    android:textSize="24sp"
                    
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sentado"
                    android:textSize="24sp"

                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="0"
                    android:maxWidth="164dp"
                    android:minWidth="64dp"
                    android:text="@string/movimento"
                    android:textSize="24sp"
                    
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/elevacao_dos_ombros"
                    android:textSize="24sp"

                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="0"
                    android:maxWidth="164dp"
                    android:minWidth="64dp"
                    android:text="@string/local_da_resistencia"
                    android:textSize="24sp"
                    
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acima_do_acromio_oposto_movimento"
                    android:textSize="24sp"

                    android:layout_weight="2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_weight="0"
                    android:maxWidth="164dp"
                    android:minWidth="64dp"
                    android:text="@string/gravidade_minimizada"
                    android:textSize="24sp"
                    
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dd_ou_dv"
                    android:textSize="24sp"

                    android:layout_weight="2" />

            </LinearLayout>


            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/activity_ajuda_forca_muscular_ombro_trapezio_medio_video_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/video_demonstrativo"
                android:layout_gravity="top"
                app:resize_mode="fit"
                app:show_timeout="0"
                app:surface_type="texture_view"/>

            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/activity_ajuda_forca_muscular_ombro_trapezio_medio_video_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/video_demonstrativo"
                android:layout_gravity="top"
                android:layout_marginTop="24dp"
                app:resize_mode="fit"
                app:show_timeout="0"
                app:surface_type="texture_view"/>


        </LinearLayout>


    </ScrollView>

    <Button
        android:id="@+id/activity_ajuda_forca_muscular_ombro_trapezio_medio_button_sair"
        android:layout_width="168dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        android:text="@string/sair"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_ajuda_forca_muscular_ombro_trapezio_medio_scroll_view"
        app:layout_constraintVertical_bias="1" />


</androidx.constraintlayout.widget.ConstraintLayout>