<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/item_export_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Nome da Seção"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/item_export_selection"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/item_export_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:contentDescription="@string/icone_preenchido"
        app:layout_constraintBottom_toBottomOf="@id/item_export_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/item_export_nome"
        app:layout_constraintTop_toTopOf="@+id/item_export_nome"
        app:layout_constraintVertical_bias="0.5"
        android:clickable="false"
        android:focusable="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>